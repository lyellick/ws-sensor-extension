{
    "manifest_version": 3,
    "name": "Water Softener Salt Monitor",
    "description": "Monitors salt levels and updates the extension icon in real-time based on API data (high, medium, low, or error status).",
    "version": "1.0",
    "permissions": ["alarms", "activeTab"],
    "host_permissions": ["http://ws-sensor.yellick.me:5000/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": "icons/icon-high.png"
    },
    "icons": {
      "16": "icons/icon-high.png",
      "48": "icons/icon-high.png",
      "128": "icons/icon-high.png"
    }
  }
  